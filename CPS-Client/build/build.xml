<?xml version="1.0" encoding="UTF-8"?>
	<project name="CPS-Client" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Server/lib">
				<filename name="mysql-connector-java-5.1.45-bin.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Server/lib">
				<filename name="junit-4.12.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Client/lib">
				<filename name="jfxrt.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Client/lib/commons-cli-1.4">
				<filename name="commons-cli-1.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Server/lib">
				<filename name="gson-2.6.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Client/lib">
				<filename name="javax.mail.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/home/me/git/cps/CPS-Server/lib">
				<filename name="hamcrest-core-1.3.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/home/me/git/cps/CPS-Client">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
		<copy todir="projectRefs">
			<fileset dir="/home/me/git/cps">
				<include name="CPS-Server/src/**" />
			</fileset>
		</copy>
		<copy todir="projectRefs">
			<fileset dir="/home/me/git/cps">
				<include name="OCSF/src/**" />
			</fileset>
		</copy>
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="jfxrt.jar"/>
				<include name="commons-cli-1.4.jar"/>
				<include name="javax.mail.jar"/>
				<include name="mysql-connector-java-5.1.45-bin.jar"/>
				<include name="hamcrest-core-1.3.jar"/>
				<include name="gson-2.6.2.jar"/>
				<include name="junit-4.12.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
		<copy todir="build/src">
			<fileset dir="projectRefs/CPS-Server/src">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="build/src">
			<fileset dir="projectRefs/OCSF/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
		<copy todir="build/classes">
			<fileset dir="projectRefs/CPS-Server/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
		<copy todir="build/classes">
			<fileset dir="projectRefs/OCSF/src">
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
	
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="CPS-Client.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="CPS-Client"
			mainClass="cps.client.main.ClientApplication"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/CPS-Client.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="Group1"/>
				<attribute name="Implementation-Title" value="CPS-Client"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="CPS-Client" nativeBundles="all"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="CPS-Client" vendor="Group1"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
		<fx:csstobin outdir="build/classes">
			<fileset dir="build/classes" includes="**/*.css"/>
		</fx:csstobin>
	
	</target>
</project>
